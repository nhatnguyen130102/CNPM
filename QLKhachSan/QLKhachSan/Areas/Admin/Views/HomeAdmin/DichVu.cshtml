                <tr>
                    <th scope="col">Tên dịch vụ</th>
                    <th scope="col">Giá</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                <tr>
                    <th scope="row"></th>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="d-flex align-items-center justify-content-end">
                        <button type="button" style="padding: 10px ; width: 100px;" class="btn btn-danger btn-lg">Sửa </button>
                        <button type="button" style="padding: 10px ; width: 100px;" class="btn btn-dark btn-lg">Chi tiết </button>
                        <button type="button" style="padding: 10px ; width: 100px;" class="btn btn-warning btn-lg">Xóa </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</main>