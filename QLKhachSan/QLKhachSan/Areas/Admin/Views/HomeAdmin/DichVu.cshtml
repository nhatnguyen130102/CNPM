

@{
    ViewBag.Title = "Dịch vụ";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<main>
    <form style="margin:20px">
        <fieldset disabled><h3>Dịch vụ</h3> </fieldset>
        <button type="button" class="btn btn-primary btn-lg mb-4 mt-3">
            @Html.ActionLink("Thêm mới", "ThemDichVu", "HomeAdmin", new { area = "Admin" }, new { @style = "color: #ffffff; text-decoration: none" })
