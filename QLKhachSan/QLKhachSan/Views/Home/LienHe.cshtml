@{
    ViewBag.Title = "LienHe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link href="~/Assets/Admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-light">
    <div class="bg-image shadow-sm"
         style="background-image: url('/Assets/Client/hotel-bg-3.jpg');">
        <div class="bg-dark bg-opacity-50 text-light" 
             style="padding: 3rem 6rem 5rem 6rem">
            <div class="container-fluid w-50 text-center">
                <span style="font-size: 70px; font-weight: 800">LIÊN HỆ</span>
                <div class="m-auto mt-2 mb-4 row justify-content-around">
                    <div class="col d-flex flex-column">
                        <h5 style="color: yellow; font-weight: 700">Địa chỉ</h5>
                        <span>22 Quốc lộ G, TP. HCM</span>
                    </div>
                    <div class="col d-flex flex-column">
                        <h5 style="color: yellow; font-weight: 700">Điện thoại</h5>
                        <span>+8492 2344 25</span>
                    </div>
                    <div class="col d-flex flex-column">
                        <h5 style="color: yellow; font-weight: 700">Email</h5>
                        <span>DBAHotel@st.edu.vn</span>
                    </div>
                </div>
            </div>
            <div class="container-fluid w-50 text-center">
                <h4 class="mt-5 mb-3 fw-bold">Liên hệ ngay với chúng tôi</h4>
                <div class="row mb-2">
                        <input id="contact-input-name" type="text" required placeholder="Nhập họ tên" class="col-6"
                               style="padding:1rem; border-radius: 10px; border: none; opacity: 0.8" />
                        <input id="contact-input-email" type="text" required placeholder="Nhập email" class="col-6"
                               style="padding:1rem; border-radius: 10px; border: none; opacity: 0.8" />
                </div>
                
                <div class="row mb-2">
                    <input id="contact-input-title" type="text" required placeholder="Nhập tiêu đề"
                           style="padding:1rem; border-radius: 10px; border: none; opacity: 0.8" />
                </div>
                <div class="row mb-2">
                    <textarea id="contact-input-content" type="text" required placeholder="Nhập nội dung"
                              style="overflow: hidden; padding:1rem 1rem 4rem 1rem; border-radius: 10px; border: none; opacity: 0.8"></textarea>
                </div>
                <div class="row">
                    <button class="btn-warning shadow-sm fs-5 w-100"
                            style="padding:1rem; border-radius: 10px; border: none; opacity: 0.9">
                        Gửi tin nhắn
                    </button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>